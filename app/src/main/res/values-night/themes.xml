<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Base.Theme.Mobile" parent="Theme.Material3.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        
        
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialCardViewStyle">@style/CardViewStyleDark</item>
        
        <!-- Атрибуты для плейсхолдеров -->
        <item name="placeholderBackground">@color/placeholder_background_dark</item>
        <item name="colorSurfaceVariant">@color/card_background_dark</item>
    </style>
    
    
    <style name="CardViewStyleDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#222222</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>



















    
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/tab_text_unselected</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabBackground">@color/tab_background</item>
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabPaddingTop">8dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="tabUnboundedRipple">false</item>
    </style>
</resources>