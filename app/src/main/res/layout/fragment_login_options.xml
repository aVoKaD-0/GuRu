<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".ui.fragment.LoginOptionsFragment">

    <ImageView
        android:id="@+id/img_palm"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Пальма"
        android:rotation="20"
        android:src="@drawable/ic_palm_tree_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_flower_top"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Фиолетовый цветок"
        android:src="@drawable/ic_flower_vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:rotation="-5"
        android:text="GURU!"
        android:textColor="#0D47A1"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_palm" />

    <ImageView
        android:id="@+id/img_boat"
        android:layout_width="114dp"
        android:layout_height="87dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Лодка"
        android:src="@drawable/ic_boat_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_palm" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Регистрация / Вход"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_email_password_sign_in"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="14dp"
        android:text="Вход/регистрация по почте"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:rippleColor="#BDBDBD"
        app:strokeColor="#757575"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google_sign_in"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="14dp"
        android:text="Google Аккаунт"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_email_password_sign_in"
        app:rippleColor="#BDBDBD"
        app:strokeColor="#757575"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_google_sign_in2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="14dp"
        android:text="Тестовый вход"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_google_sign_in"
        app:rippleColor="#BDBDBD"
        app:strokeColor="#757575"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_privacy_policy"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingVertical="4dp"
        android:text="Политика конфиденциальности"
        android:textAllCaps="false"
        android:textColor="#424242"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/footer_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/footer_view"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:background="@drawable/bg_shore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_shape"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Пляжный зонт"
        android:rotation="15"
        android:src="@drawable/ic_beach_umbrella_vector"
        app:layout_constraintBottom_toBottomOf="@id/footer_view"
        app:layout_constraintEnd_toEndOf="@id/footer_view" />

    <ImageView
        android:id="@+id/img_shape2"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Пляжный зонт 2"
        android:rotation="-15"
        android:src="@drawable/ic_beach_umbrella_vector"
        app:layout_constraintBottom_toBottomOf="@id/footer_view"
        app:layout_constraintStart_toStartOf="@id/footer_view" />

    <ImageView
        android:id="@+id/lounger1"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:contentDescription="Лежак 1"
        android:rotation="-25"
        android:src="@drawable/ic_lounger_placeholder"
        app:layout_constraintBottom_toBottomOf="@id/footer_view"
        app:layout_constraintStart_toStartOf="@id/footer_view"
        app:layout_constraintTop_toTopOf="@id/footer_view"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/lounger2"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginEnd="48dp"
        android:contentDescription="Лежак 2"
        android:rotation="15"
        android:src="@drawable/ic_lounger_placeholder"
        app:layout_constraintBottom_toBottomOf="@id/footer_view"
        app:layout_constraintEnd_toEndOf="@id/footer_view"
        app:layout_constraintTop_toTopOf="@id/footer_view"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout> 